.form-group
  = label :user_group, :name, class: 'control-label col-md-3'
  .col-md-9
    = text_field  :user_group, :name, class: 'form-control'
.form-group
  = label :user_group, :notes, class: 'control-label col-md-3'
  .col-md-9
    = text_area :user_group, :notes, class: 'form-control'
.form-group
  .col-md-9.col-md-offset-3
    = submit_tag('Save', class: 'btn btn-primary')
    - if !@user_group.nil?
      or
      = link_to 'Delete', universal_access.user_group_path(@user_group), method: :delete, data: {confirm: 'Are you sure you want to delete this group?'}, class: 'btn btn-danger btn-sm'