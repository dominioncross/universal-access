%p.lead The selected functions will be ENABLED for this user group.
.row
  - @functions.each_with_index do |category, i|
    - if i%3==0 and i>0
      .clearfix
    .col-md-4.small
      = panel(title: category[0].to_s.titleize, class: 'info panel-bordered') do
        - category[1].each do |function|
          .row
            .col-md-1
              - selected = @user_group.nil? ? false : ((!@user_group.functions[category[0].to_s].blank? and @user_group.functions[category[0].to_s].include?(function[0].to_s)) ? true : false) if !@user_group.functions.nil?
              = check_box_tag "functions[#{category[0]}][]", "#{function[0]}", selected, id: "function_#{category[0]}_#{function[0]}"
            .col-md-10
              %label{for: "function_#{category[0]}_#{function[0]}", style: 'margin-bottom:0;'}= function[1].blank? ? function[0].titleize : function[1]
              %span.small.text-muted{style: 'font-size:8pt;'}= parenthesize function[0]
              
= submit_tag('Update', class: 'btn btn-primary')
